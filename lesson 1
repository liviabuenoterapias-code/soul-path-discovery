    <script>
        // Sacred Space Functions
        let breathCount = 0;
        let isBreathing = false;

        function startGuidedBreathing() {
            if (isBreathing) return;
            
            isBreathing = true;
            breathCount = 0;
            
            const circle = document.getElementById('breathCircle');
            const instruction = document.getElementById('breathInstruction');
            const progress = document.getElementById('breathProgress');
            
            circle.style.cursor = 'default';
            
            function doBreathe() {
                if (breathCount >= 3) {
                    // Breathing complete
                    circle.classList.add('completed');
                    instruction.textContent = 'Complete ✨';
                    progress.textContent = 'Sacred space created. Now set your intention below:';
                    
                    setTimeout(() => {
                        document.getElementById('intentionInput').style.display = 'block';
                        document.getElementById('intentionInput').focus();
                    }, 1000);
                    return;
                }
                
                breathCount++;
                progress.textContent = `Breath ${breathCount} of 3`;
                
                // Inhale phase
                circle.classList.remove('exhaling');
                circle.classList.add('inhaling');
                instruction.textContent = 'Inhale...';
                
                setTimeout(() => {
                    // Hold phase
                    instruction.textContent = 'Hold...';
                    
                    setTimeout(() => {
                        // Exhale phase
                        circle.classList.remove('inhaling');
                        circle.classList.add('exhaling');
                        instruction.textContent = 'Exhale...';
                        
                        setTimeout(() => {
                            // Reset for next breath
                            circle.classList.remove('exhaling');
                            
                            if (breathCount < 3) {
                                instruction.textContent = 'Ready...';
                                setTimeout(doBreathe, 1000);
                            } else {
                                doBreathe(); // Complete the sequence
                            }
                        }, 4000); // 4 second exhale
                    }, 1000); // 1 second hold
                }, 4000); // 4 second inhale
            }
            
            doBreathe();
        }

        // Monitor intention input
        document.getElementById('intentionInput').addEventListener('input', function() {
            if (this.value.length > 10 && breathCount >= 3) {
                document.getElementById('readyBtn').style.display = 'block';
            }
        });

        function showCalculator() {
            document.getElementById('calculatorSection').style.display = 'block';
            document.getElementById('calculatorSection').scrollIntoView({ behavior: 'smooth' });
        }

        // Path definitions (authentic Odu information)
        const pathDefinitions = {
            1: { name: "OKANRAN", description: "The Dynamic Messenger - You came to bridge worlds through passionate communication and transformation." },
            2: { name: "EJIOKÔ", description: "The Abundant Nurturer - You came to create abundance and nurture growth in yourself and others." },
            3: { name: "ETAOGUNDÁ", description: "The Strategic Warrior - You came to overcome obstacles through courage and strategic thinking." },
            4: { name: "IOROSSUN", description: "The Wise Healer - You came to heal and guide others through deep spiritual wisdom." },
            5: { name: "OSHE MEJI", description: "The Creative Force - You came to create beauty and transform the world through your unique gifts." },
            6: { name: "OBARÁ MEJI", description: "The Heart-Centered Leader - You came to lead through love and emotional intelligence." },
            7: { name: "ODI MEJI", description: "The Intelligent Transformer - You came to transform obstacles through higher wisdom." },
            8: { name: "EJIONILE", description: "The Divine Pioneer - You came to initiate new beginnings and lead by example." },
            9: { name: "OSA MEJI", description: "The Mystical Communicator - You came to bridge the spiritual and material worlds." },
            10: { name: "OFUN MEJI", description: "The Sacred Teacher - You came to share ancient wisdom and guide spiritual development." },
            11: { name: "OWONRIN MEJI", description: "The Revolutionary Changemaker - You came to transform systems and create positive change." },
            12: { name: "EJILAXEBORÁ", description: "The Justice Seeker - You came to bring balance and fairness to the world." },
            13: { name: "EJIOLIGIBAN", description: "The Death-Rebirth Master - You came to guide major transformations and new beginnings." },
            14: { name: "IKÁ MEJI", description: "The Strategic Conqueror - You came to overcome challenges through determination and strategy." },
            15: { name: "OBEOGUNDÁ", description: "The Protective Warrior - You came to protect and defend what is sacred and just." },
            16: { name: "ALOÁRIA", description: "The Universal Blessing - You came to share universal love and wisdom with all beings." }
        };

        function calculatePath() {
            const day = parseInt(document.getElementById('dayInput').value);
            const month = parseInt(document.getElementById('monthInput').value);
            const year = parseInt(document.getElementById('yearInput').value);

            if (!day || !month || !year) {
                alert('Please enter your complete birth date');
                return;
            }

            // Sacred Cross Calculation (authentic method)
            const dayStr = day.toString().padStart(2, '0');
            const monthStr = month.toString().padStart(2, '0');
            const yearStr = year.toString();

            // Cross positions
            const testa = parseInt(dayStr[0]) + parseInt(dayStr[1]); // Day
            const nuca = parseInt(monthStr[0]) + parseInt(monthStr[1]); // Month
            const direita = parseInt(yearStr[0]) + parseInt(yearStr[1]); // First two digits of year
            const esquerda = parseInt(yearStr[2]) + parseInt(yearStr[3]); // Last two digits of year

            // Calculate center (soul path)
            let centro = testa + nuca + direita + esquerda;
            while (centro > 16) {
                centro = Math.floor(centro / 10) + (centro % 10);
            }
            if (centro === 0) centro = 16;

            // Display sacred cross
            document.getElementById('sacredCross').style.display = 'block';
            document.getElementById('testa').textContent = testa > 16 ? reduceToSingle(testa) : testa;
            document.getElementById('nuca').textContent = nuca > 16 ? reduceToSingle(nuca) : nuca;
            document.getElementById('direita').textContent = direita > 16 ? reduceToSingle(direita) : direita;
            document.getElementById('esquerda').textContent = esquerda > 16 ? reduceToSingle(esquerda) : esquerda;
            document.getElementById('centro').textContent = centro;

            // Show result
            setTimeout(() => {
                const pathInfo = pathDefinitions[centro];
                document.getElementById('pathNumber').textContent = centro;
                document.getElementById('pathName').textContent = pathInfo.name;
                document.getElementById('pathDescription').textContent = pathInfo.description;
                document.getElementById('resultContainer').style.display = 'block';
                
                // Store result for next lesson
                localStorage.setItem('soulPathNumber', centro);
                localStorage.setItem('soulPathName', pathInfo.name);
            }, 1000);
        }

        function reduceToSingle(num) {
            while (num > 16) {
                num = Math.floor(num / 10) + (num % 10);
            }
            return num;
        }

        function goToProfile() {
            // This would navigate to Lesson 2 in your Squarespace course
            alert('In your course, this would take you to Lesson 2: Your Complete Soul Path Profile where you can explore your specific Odu in detail!');
        }
    </script>
